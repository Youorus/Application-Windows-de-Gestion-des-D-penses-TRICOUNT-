<Page x:Class="prbd_2324_a03.View.conception"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:prbd_2324_a03.View"
      mc:Ignorable="d" 
      Background="White"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="conception">

    <Grid>
        <!-- Titre et informations -->
        <StackPanel Margin="20">
            <TextBlock HorizontalAlignment="Center" FontWeight="Bold" FontSize="18" Margin="0,3,0,0">      
                <Run Text="&lt;New Tricount&gt;"/>
                <Run Text=" - No Description" FontSize="18" FontWeight="Normal" FontStyle="Italic"/>
            </TextBlock>

            <TextBlock HorizontalAlignment="Center" FontSize="14" Margin="0,3,0,0">
                <Run Text="Created by"/>
                <Run Text="{Binding CreatedBy}"/>
                <Run Text=" on"/>
                <Run Text="{Binding CreateDate, StringFormat={StaticResource DateFormat}}"/>
            </TextBlock>
        </StackPanel>

        <!-- Entrées utilisateur -->
        <Grid Margin="20,82,62,256">
            <!-- Première ligne -->
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Première ligne -->
            <Label Content="Label:" Grid.Row="0" Grid.Column="0" Margin="0,10,0,0"/>
            <TextBox TextWrapping="Wrap" Text="TextBlock" Grid.Row="0" Grid.Column="1" Margin="0,10,0,0" Width="Auto" MinWidth="200"/>

            <!-- Troisième ligne -->
            <Label Content="Description:" Grid.Row="1" Grid.Column="0" Margin="0,10,0,0"/>
            <TextBox TextWrapping="Wrap" Text="TextBlock" Grid.Row="1" Grid.Column="1" Margin="0,10,0,0" Width="Auto" MinWidth="200"/>


            <!-- Deuxième ligne -->
            <Label Content="Date:" Grid.Row="2" Grid.Column="0" Margin="0,10,0,0"/>
            <DatePicker Grid.Row="2" Grid.Column="1" Margin="0,10,0,124" Width="Auto" MinWidth="200"/>
           

        </Grid>

      

        <!-- Boutons d'action -->
        <StackPanel HorizontalAlignment="Right" Orientation="Horizontal" VerticalAlignment="Bottom" Margin="0,0,20,20">
            <Button Content="Save" Margin="0,0,20,0" Width="75"/>
            <Button Content="Cancel" Width="75"/>
        </StackPanel>
    </Grid>
</Page>
