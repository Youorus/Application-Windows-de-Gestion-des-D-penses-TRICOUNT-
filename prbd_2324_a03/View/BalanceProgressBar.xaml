<UserControl x:Class="prbd_2324_a03.View.BalanceProgressBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:prbd_2324_a03.View"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="400">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <ProgressBar x:Name="progressBar" Height="30" Background="{Binding Colors}" VerticalAlignment="Center" Width="200" Minimum="0"  Value="{Binding ProgressValue, UpdateSourceTrigger=PropertyChanged}" Maximum="100"/>
        <TextBlock x:Name="valueTextBox" Text="{Binding FullName}" Height="30" VerticalAlignment="Center" Margin="10,0,0,0" Grid.Column="1" />
    </Grid>
</UserControl>
